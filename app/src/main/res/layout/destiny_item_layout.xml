<?xml version="1.0" encoding="utf-8"?>
<!-- lista de destinos -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground">
    <!-- layout_1 -->
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <!-- center aparece como ML-->

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_location_on"
            />

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_title_1"
                android:text="origen"
                android:textColor="@color/negro"
                android:paddingTop="@dimen/activity_horizontal_margin1"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_description_1"
                android:text="av arquitectos..."
                android:textColor="@color/negro"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_extra_info_1"
                android:text="3.4 km"
                android:textColor="@color/colorSecondary"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <!-- layout_2 -->
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <!-- center aparece como ML-->

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_location_on"
            />

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_title_2"
                android:text="destino 1"
                android:textColor="@color/negro"
                android:paddingTop="@dimen/activity_horizontal_margin1"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_description_2"
                android:text="av arquitectos..."
                android:textColor="@color/negro"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_extra_info_2"
                android:text="3.4 km"
                android:textColor="@color/colorSecondary"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <!-- dots -->
    <LinearLayout
        android:id="@+id/layout_dots"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_dots"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_more_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- layout_3 -->
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <!-- center aparece como ML-->

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_location_on"
            />

        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_title_3"
                android:text="destino 2"
                android:textColor="@color/negro"
                android:paddingTop="@dimen/activity_horizontal_margin1"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_description_3"
                android:text="av arquitectos..."
                android:textColor="@color/negro"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_extra_info_3"
                android:text="3.4 km"
                android:textColor="@color/colorSecondary"
                android:paddingLeft="@dimen/activity_horizontal_margin1"
                android:paddingRight="@dimen/activity_horizontal_margin1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
