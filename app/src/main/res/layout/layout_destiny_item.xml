<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/layout_destination_point"
            android:padding="8dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <!-- center aparece como ML-->

            <ImageButton
                android:id="@+id/button_drive"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@android:color/white"
                android:background="@drawable/rounded_border_button_filled"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:src="@drawable/ic_directions"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_title"
                    android:textColor="@color/negro"
                    android:paddingTop="@dimen/activity_horizontal_margin1"
                    android:paddingLeft="@dimen/activity_horizontal_margin1"
                    android:paddingRight="@dimen/activity_horizontal_margin1"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/image"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_description"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="@dimen/activity_horizontal_margin1"
                    android:paddingRight="@dimen/activity_horizontal_margin1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin1"
                    android:paddingRight="@dimen/activity_horizontal_margin1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_extra_info"
                        android:textColor="@color/colorSecondary"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="normal"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text_times"
                        android:textColor="@color/colorSecondary"
                        android:paddingRight="@dimen/activity_horizontal_margin1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="normal"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/text_contact_data"
                    android:clickable="true"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/activity_horizontal_margin1"
                    android:paddingRight="@dimen/activity_horizontal_margin1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_instructions"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/activity_horizontal_margin1"
                    android:paddingRight="@dimen/activity_horizontal_margin1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="normal"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
</RelativeLayout>
